<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/activity_main"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="cliq.debt.MainActivity">


    <TextView
        android:text="Registered Friends"
        android:layout_width="325dp"
        android:id="@+id/textViewRegistered"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textAlignment="center"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/listViewUnregistered"
        />

    <ListView
        android:layout_height="160dp"
        android:id="@+id/listViewUnregistered"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewUnregistered"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="320dp"/>

    <TextView
        android:text="Unregistered Friends"
        android:layout_width="325dp"
        android:layout_height="30dp"
        android:id="@+id/textViewUnregistered"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <ListView
        android:layout_width="320dp"
        android:id="@+id/listViewRegistered"
        android:background="@android:color/holo_blue_bright"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewRegistered"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="160dp"/>

    <TextView
        android:layout_width="320dp"
        android:layout_height="132dp"
        android:id="@+id/textViewMessage"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/listViewRegistered"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>
